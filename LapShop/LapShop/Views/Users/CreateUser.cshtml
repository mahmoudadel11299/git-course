@model UserRoleModel


<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>create account</h3>
                <div class="theme-card">
                    <form class="theme-form" method="post"
                          asp-controller="Users" asp-action="CreateUser">
                        <div class="form-group">
                            <label for="exampleInputUsername1">RoleName</label>
                            <select class="form-control" asp-for="RoleId" asp-items="@(new SelectList(ViewBag.role,"Id","Name"))"></select>
                        </div>
                        <div class="form-row">

                            <input type="hidden" asp-for="UserId" />
                            <input type="hidden" asp-for="RoleId" />
                            <input type="hidden" asp-for="concurrencyStamp" />

                           
                            <div class="col-md-6">
                                <label for="email">First Name</label>
                                <input asp-for="FirstName"
                                       type="text" class="form-control" id="fname" placeholder="First Name"
                                       required="">
                                <span asp-validation-for="FirstName"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="email">LastName</label>
                                <input asp-for="LastName"
                                       type="text" class="form-control" id="fname" placeholder="LastName"
                                       required="">
                                <span asp-validation-for="LastName"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="email">Email</label>
                                <input asp-for="Email"
                                       type="email" class="form-control" id="fname" placeholder="Email"
                                       required="">
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="email">Password</label>
                                <input asp-for="Password"
                                       type="password" class="form-control" id="fname" placeholder="Password"
                                       required="">
                                <span asp-validation-for="Password"></span>
                            </div>

                        </div>
                        <div class="form-row">

                            <button type="submit" class="btn btn-solid">create a role</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
